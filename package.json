{
  "private": true,
  "type": "module",
  "name": "@renderlayer/monorepo",
  "version": "0.0.7",
  "repository": "github:epreston/renderlayer",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "browserslist": [
    "baseline 2025"
  ],
  "prettier": "@epreston/prettier-config",
  "packageManager": "npm@11.7.0",
  "engines": {
    "node": "^20.19.0 || ^22.21.0 || >=24.12.0"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "check": "node scripts/circular.js",
    "check-types": "tsc --project tsconfig.json --incremental --allowJs --checkJs --noEmit",
    "clean": "rimraf -g -v packages/*/dist temp .eslintcache",
    "meta": "node scripts/meta.js",
    "size": "cd apps/size-check && vite build && node brotli",
    "lint": "eslint .",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-coverage": "vitest run --coverage.enabled",
    "format": "prettier --check --cache \"**/*.?(c|m)[tj]s?(x)\"",
    "format-fix": "prettier --write --cache \"**/*.?(c|m)[tj]s?(x)\"",
    "release": "node scripts/release.js"
  },
  "devDependencies": {
    "@epreston/eslint-config": "^2.3.0",
    "@epreston/prettier-config": "^2.1.0",
    "@epreston/tsconfig": "^1.2.1",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "~4.0.18",
    "enquirer": "^2.4.1",
    "eslint": "^9.39.2",
    "execa": "^9.6.1",
    "jsdom": "^27.4.0",
    "madge": "^8.0.0",
    "minimist": "^1.2.8",
    "msw": "^2.12.7",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1",
    "pretty-bytes": "^7.1.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-shader-chunks": "^1.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "~4.0.18"
  }
}
